{
  "name": "cargo-deliver",
  "version": "0.1.0",
  "description": "cargoDeliver multi purpose server",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Neriya Rosner",
  "license": "MIT",
  "scripts": {
    "start": "npm run watch-debug-server",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets && cd ..\\angular && ng build --watch --aot --output-path ..\\nodejs\\dist\\app && cd ..\\nodejs",
    "build-server": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "serve-node": "nodemon dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "test": "mocha -r ts-node/register test/*.test.ts --exit --timeout 0",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node,NS,Angular\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold,red.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\" \"cd ..\\nativeScript && npm run watch && cd ..\\nodejs\" \"cd ..\\angular && npm run watch && cd ..\\nodejs\"",
    "watch-angular": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node,Angular\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\" \"cd ..\\angular && npm run debug && cd ..\\nodejs\"",
    "watch-phone": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node,Angular\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\" \"cd ..\\nativeScript && npm run phone && cd ..\\nodejs\"",
    "watch-debug-server": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Angular\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.6.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "bson": "^3.0.2",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.0",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "forever": "^0.15.3",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.10",
    "lusca": "^1.5.2",
    "moment": "^2.22.2",
    "mongoose": "^4.13.7",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.6",
    "oauth2-server": "git+https://github.com/oauthjs/node-oauth2-server.git",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.4",
    "request": "^2.87.0",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.0",
    "@angular/compiler-cli": "^5.2.5",
    "@angular/core": "^5.2.5",
    "@types/async": "^2.0.45",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.17.0",
    "@types/bson": "^1.0.11",
    "@types/chai": "^4.1.3",
    "@types/compression": "0.0.33",
    "@types/connect-mongo": "0.0.34",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.35",
    "@types/express-session": "^1.15.10",
    "@types/glob": "^5.0.35",
    "@types/jquery": "^3.2.17",
    "@types/jwt-simple": "^0.5.33",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/mime": "^2.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/mocha": "^5.2.1",
    "@types/mongodb": "^2.2.21",
    "@types/mongoose": "^4.7.37",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.67",
    "@types/oauth2-server": "^3.0.7",
    "@types/passport": "^0.4.5",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.0.9",
    "@types/shelljs": "^0.7.7",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "mime-types": "^2.1.18",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.1",
    "shelljs": "^0.7.7",
    "supertest": "^3.0.0",
    "ts-node": "^4.0.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
